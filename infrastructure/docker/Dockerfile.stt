# Multi-stage build for STT Engine Service (gRPC)
# Whisper-based Speech-to-Text with GPU acceleration

# Stage 1: Builder - Install dependencies
FROM python:3.11-slim as builder

# Set working directory
WORKDIR /app

# Install system dependencies for building Python packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    make \
    git \
    pkg-config \
    libavcodec-dev \
    libavformat-dev \
    libavutil-dev \
    libavdevice-dev \
    libavfilter-dev \
    libswscale-dev \
    libswresample-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements/base.txt /app/requirements-base.txt
COPY requirements/ml.txt /app/requirements.txt

# Install Python dependencies in a virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements-base.txt && \
    pip install --no-cache-dir --extra-index-url https://download.pytorch.org/whl/cu128 \
        torch==2.7.0+cu128 \
        torchaudio==2.7.0+cu128 && \
    pip install --no-cache-dir \
        openai-whisper==20231117 \
        "faster-whisper==0.10.0" --no-deps && \
    pip install --no-cache-dir \
        --only-binary=av "av>=13.0.0" \
        "ctranslate2>=3.24.0" \
        "tokenizers>=0.13,<0.21" \
        "onnxruntime>=1.14,<2" \
        more-itertools \
        numba \
        huggingface-hub \
        tiktoken \
        grpcio==1.59.0 \
        grpcio-tools==1.59.0 \
        protobuf==4.25.0

# Copy proto files and compile them
COPY proto/ /app/proto/
RUN mkdir -p /app/src/core/stt_engine && \
    python -m grpc_tools.protoc \
    -I/app/proto \
    --python_out=/app/src/core/stt_engine \
    --grpc_python_out=/app/src/core/stt_engine \
    /app/proto/stt_service.proto && \
    sed -i 's/^import stt_service_pb2/from . import stt_service_pb2/' /app/src/core/stt_engine/stt_service_pb2_grpc.py

# Stage 2: Runtime - Production image with CUDA 12.8 support (RTX 5080 Blackwell sm_120)
FROM nvidia/cuda:12.8.0-runtime-ubuntu22.04

# Install Python 3.11
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3.11 \
    python3.11-venv \
    python3-pip \
    ffmpeg \
    libsndfile1 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set Python 3.11 as default
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.11 1 && \
    update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.11 1

# Set working directory
WORKDIR /app

# Copy installed packages from builder's venv to system Python
COPY --from=builder /opt/venv/lib/python3.11/site-packages/ /usr/local/lib/python3.11/dist-packages/

# Copy application source code
COPY src/ /app/src/
COPY requirements/ /app/requirements/

# Copy compiled proto files from builder
COPY --from=builder /app/src/core/stt_engine/*_pb2*.py /app/src/core/stt_engine/

# Create directories for models and logs
RUN mkdir -p /app/models /app/logs && \
    chmod 755 /app/models /app/logs

# Set Python environment variables and library paths for cuDNN
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    CUDA_VISIBLE_DEVICES=0 \
    LD_LIBRARY_PATH=/usr/local/lib/python3.11/dist-packages/nvidia/cudnn/lib:$LD_LIBRARY_PATH

# Expose gRPC port
EXPOSE 50051

# Install grpc_health_probe for health checks
RUN curl -L https://github.com/grpc-ecosystem/grpc-health-probe/releases/download/v0.4.24/grpc_health_probe-linux-amd64 \
    -o /usr/local/bin/grpc_health_probe && \
    chmod +x /usr/local/bin/grpc_health_probe

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD grpc_health_probe -addr=:50051 || exit 1

# Run the STT gRPC server
# Note: This assumes you have a gRPC server script for STT
# Adjust the command based on your actual implementation
CMD ["python", "-m", "src.core.stt_engine.grpc_server"]
